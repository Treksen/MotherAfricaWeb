@model web.Models.Application.ExperienceViewModel

<h3>Experience</h3>
<form id="experienceForm" class="editable-form">
    <div id="experienceContainer">
        <!-- Initial Experience Section -->
        <div class="experience-section" id="initialExperienceSection">
            <div class="form-group">
                <label for="JobTitle" class="mt-4">Job Title</label>
                <input type="text" class="form-control" name="JobTitle[]" />
            </div>
            <div class="form-group">
                <label for="Company">Company</label>
                <input type="text" class="form-control" name="Company[]" />
            </div>

            <div class="form-group">
                <label for="datestart">Beginning date</label>
                <input type="date" class="form-control" name="StartDate[]" />
            </div>
            <div class="form-group">
                <label for="dateend">Ending date</label>
                <input type="date" class="form-control mb-3" name="EndDate[]" />
            </div>

            <!-- Remove button will be added dynamically -->
        </div>
    </div>

    

    <div class="mt-4">
        <button type="button" class="btn text-white" onclick="prevTab('#certifications')">Back</button>
        <button type="button" class="btn text-white" onclick="nextTab('#statutory')">Next</button>
        <button type="button" class="btn text-white" onclick="addExperience()">Other </button>
    </div>
</form>
