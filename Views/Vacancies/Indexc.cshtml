@{
    ViewData["Title"] = "Contacts";
    const string vacancyDetails = "Details";
}


<section>
    <div class="text-center"
         style="background-color: #800000;
                margin-bottom: 20px;
                width: 100%;
                height: 200px;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                text-align: center;
                padding: 20px;">

        <h4 style="color: white;
                   font-family: Tahoma;
                   max-width: 100%;
                   font-size: 50px;">
            “I Have a Dream”
        </h4>
        <p style="color: white; font-family: Tahoma; font-size: 23px;">-Martin Luther King</p>
    </div>
</section>

<!-- Contact Us Form Section -->
<section style="background-color: #f8f8f8; padding: 50px 20px;">
    <div class="container" style="max-width: 900px; margin: 0 auto;">
        <!-- Branding -->
        <div class="text-center mb-5">
            <img src="~/images/samweb15.jpg" alt="CityGrid Logo"
                 style="height: 80px; width: auto; margin-bottom: 15px;">
            <h2 style="color: #800000; font-family: Tahoma;">
                Contact CityGrid Transport Consultants
            </h2>
            <p style="font-size: 20px; color: #555;">We’d love to hear from you! Fill in the form below:</p>
        </div>

        <!-- Contact Form -->
        <form asp-controller="Home" asp-action="Contact" method="post"
              style="background: white; padding: 30px; border-radius: 10px;
                     box-shadow: 0 4px 8px rgba(0,0,0,0.1); font-family: Tahoma; font-size: 23px;">
            <div class="form-group mb-3">
                <label for="name" style=" color: #333; font-family: Tahoma; font-size: 23px;">Full Name</label>
                <input type="text" id="name" name="name" class="form-control"
                       placeholder="Enter your name" required>
            </div>

            <div class="form-group mb-3">
                <label for="email" style=" color: #333;">Email</label>
                <input type="email" id="email" name="email" class="form-control"
                       placeholder="Enter your email" required>
            </div>

            <div class="form-group mb-3">
                <label for="subject" style=" color: #333;">Subject</label>
                <input type="text" id="subject" name="subject" class="form-control"
                       placeholder="Subject" required>
            </div>

            <div class="form-group mb-3">
                <label for="message" style="color: #333;">Message</label>
                <textarea id="message" name="message" class="form-control"
                          rows="5" placeholder="Write your message here..." required></textarea>
            </div>

            <div class="text-center">
                <button type="submit"
                        style="background-color: #800000 !important; color: white;
                               border: none; padding: 12px 30px;
                               font-size: 20px; border-radius: 5px;
                               cursor: pointer; font-family: Tahoma;">
                    Send Message
                </button>
            </div>
        </form>
    </div>
</section>
```




