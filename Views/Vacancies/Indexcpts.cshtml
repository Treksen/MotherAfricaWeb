@{
    ViewData["Title"] = "Concepts";
}

<div style="background-color: #FFFFFF;">
    <section>
        <section>
            <div class="text-center"
                 style="background-color: #800000;
                margin-bottom: 20px;
                width: 100%;
                height: 200px;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                text-align: center;
                padding: 20px;">

                <h4 style="color: white;
                   font-family: Tahoma;
                   max-width: 100%;
                   font-size: 50px;">
                    Consepts

                </h4>
            </div>
        </section>
        <!-- Main -->
        <div class="container text-center" style=" background-color: #FFFFFF;" p-5">
            <div class="container p-3 w-100">
                

                <!-- Tango Main Content -->
                <div class="container mt-5">
                    <div class="row align-items-center">
                        <!-- Left column: Title + Subtitle + Image -->
                        <div class="col-md-4 text-center">
                            <img src="/images/consepts.jpg" alt="Image"
                                 style="width: 600px; height: 600px; object-fit: cover;" />
                        </div>

                        <!-- Right column: Text -->
                        <div class="col-md-6 ms-auto text-start">
                            <h2 style="color: #800000; font-family: Tahoma; font-size: 50px;">Pedal To Class Initiative </h2>
                            <p style="color: black; font-family: 'Tahoma'; font-size: 23px;">
                                Pedal to Class Initiative (PCI)</p>
                            <p style="color: black; font-family: 'Tahoma'; font-size: 20px;">
                                
                                seeks to transform Kenya into a cycling society by promoting and incentivizing
                                 student cycling at public and private universities.
                                 </p>
                                <br />
                            <p style="color: black; font-family: 'Tahoma'; font-size: 23px;">
                                Overall Goal:
                            </p> 
                            <p style="color: black; font-family: 'Tahoma'; font-size: 20px;">
                                Encourage sustainable mobility, unlock economic potential and healthier lifestyles by making cycling the primary 
                                 mode of commuting for university students
                            </p>
                            <!-- View PDF Button -->
                            <a href="/pdfs/Pedal To Class.pdf" target="_blank"
                               class="btn mt-2"
                               style="background-color: #800000; color: white; font-family: Tahoma; border: none; font-size: 20px;">
                                View More
                            </a>

                        </div>
                    </div>
                </div>
            </div>
            
        </div>


