<!-- Table to display data -->
<table id="applicationsTable" class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ApplicationId</th>
            <th>JobId</th>
            <th>JobTitle</th>
            <th>UserId</th>
            <th>ApplicantName</th>
            <th>ApplicationStatus</th>
            <th>DateApplied</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var application in Model)
        {
            <tr>
                <td>@application.ApplicationId</td>
                <td>@application.JobId</td>
                <td>@application.JobTitle</td>
                <td>@application.UserId</td>
                <td>@application.ApplicantName</td>
                <td>@application.ApplicationStatus</td>
                <td>@application.DateApplied.ToShortDateString()</td>
                <td>
                    <a asp-action="ViewApplicantDetails" asp-route-id="@application.UserId" class="btn btn-info btn-sm">View Details</a>
                    <a asp-action="ApproveApplicant" asp-route-id="@application.UserId" class="btn btn-success btn-sm">Approve</a>
                    <a asp-action="RejectApplicant" asp-route-id="@application.UserId" class="btn btn-danger btn-sm">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Include jQuery and DataTables JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

<!-- Initialize DataTables -->
<script>
    $(document).ready(function () {
        $('#applicationsTable').DataTable(); // Initialize the DataTable
    });
</script>
