
@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<div class="mb-3">
    <a asp-action="AddUser" class="btn btn-primary">Add New User</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>UserId</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Role</th>
            <th>Contact</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- Example: Replace this with a loop to display actual user data -->
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.Contact</td>
                <td>@user.Actions
                    <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.UserId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
