@model web.Models.Admin.ManageUsersModel

@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>
<p>Are you sure you want to delete this user?</p>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.Role</dd>
</dl>

<form asp-action="DeleteUserConfirmed" method="post">
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
</form>

