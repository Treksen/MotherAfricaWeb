                    tooltip: {
                        callbacks: {
                            label: function (tooltipItem) {
                                return tooltipItem.label + ': ' + tooltipItem.raw + ' Applicants';
                            }
                        }
                    }
                }
            }
        });

    // Initialize the chart when the page loads
    document.addEventListener('DOMContentLoaded', function () {
