@model web.Models.Admin.ViewApplicationsModel

@{
    ViewData["Title"] = "Applicant Details";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.ApplicantName</h5>
            <p class="card-text"><strong>Job Title:</strong> @Model.JobTitle</p>
            <p class="card-text"><strong>Application Status:</strong> @Model.ApplicationStatus</p>
            <p class="card-text"><strong>Date Applied:</strong> @Model.DateApplied.ToShortDateString()</p>
            <p class="card-text"><strong>Resume URL:</strong> <a href="@Model.ResumeUrl" target="_blank">@Model.ResumeUrl</a></p>

            <!-- Personal Information -->
            <div class="mt-4">
                <h4>Personal Information</h4>
                <p><strong>First Name:</strong> Valentine</p>
                <p><strong>Last Name:</strong> Nudi</p>
                <p><strong>Email:</strong> nudiv@gmail.com</p>
                <p><strong>National ID:</strong> 123456789</p>
                <p><strong>Date of Birth:</strong> January 1, 1990</p>
            </div>

            <!-- Education/Academics -->
            <div class="mt-4">
                <h4>Education/Academics</h4>
                <p><strong>School Name:</strong> MKU</p>
                <p><strong>Course Name:</strong> Computer Science</p>
                <p><strong>Start Date:</strong> August 1, 2010</p>
                <p><strong>End Date:</strong> May 15, 2014</p>
            </div>

            <!-- Professional Certifications -->
            <div class="mt-4">
                <h4>Professional Certifications</h4>
                <p><strong>Primary School Certificate:</strong> <a href="#">View</a></p>
                <p><strong>Secondary School Certificate:</strong> <a href="#">View</a></p>
                <p><strong>University Certificate:</strong> <a href="#">View</a></p>
            </div>

            <!-- Professional Experience -->
            <div class="mt-4">
                <h4>Professional Experience</h4>
                <p><strong>Company Name:</strong> Example Corp</p>
                <p><strong>Position:</strong> Software Developer</p>
                <p><strong>Country:</strong> Kenya</p>
                <p><strong>City:</strong> Nairobi</p>
                <p><strong>Start Date:</strong> June 1, 2014</p>
                <p><strong>End Date:</strong> Present</p>
            </div>

            <!-- Statutory Requirements -->
            <div class="mt-4">
                <h4>Statutory Requirements</h4>
                <p><strong>Good Conduct Certificate:</strong> <a href="#">View</a></p>
                <p><strong>HELB Clearance Certificate:</strong> <a href="#">View</a></p>
                <p><strong>Tax Compliance Certificate:</strong> <a href="#">View</a></p>
                <p><strong>Ethics & Anti-Corruption Clearance:</strong> <a href="#">View</a></p>
                <p><strong>Credit Report:</strong> <a href="#">View</a></p>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="ViewApplications" class="btn btn-secondary">Back</a>
    </div>
</div>
